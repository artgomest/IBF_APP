<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    tools:context=".ui.usuarios.FichaMembroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Cabeçalho -->

        <!-- Formulário com os dados do membro -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/text_page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/ficha_do_membro"
                android:textColor="@color/dark_text_primary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/button_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/voltar"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/dark_text_primary" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- SEÇÃO: DADOS PESSOAIS -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dados Pessoais"
                    android:textColor="@color/dark_accent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nome_completo">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_nome_membro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Data Nascimento"
                        android:layout_marginEnd="4dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_data_nascimento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Sexo"
                        android:layout_marginStart="4dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_sexo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="RG"
                        android:layout_marginEnd="4dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_rg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Órgão Exp."
                        android:layout_marginStart="4dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_orgao_expeditor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapCharacters"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="CPF">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_cpf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Naturalidade (Cidade/UF)">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_naturalidade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                 <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Escolaridade">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_escolaridade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>


                 <!-- SEÇÃO: CONTATO E ENDEREÇO -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contato e Endereço"
                    android:textColor="@color/dark_accent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Celular"
                        android:layout_marginEnd="4dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_celular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Telefone Fixo"
                        android:layout_marginStart="4dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_fixo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="CEP"
                        android:layout_marginEnd="4dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_cep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="Cidade">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_cidade"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginTop="8dp">

                     <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="Rua"
                         android:layout_marginEnd="4dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_rua"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                     <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Número">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_numero"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:layout_marginTop="8dp"
                    android:hint="Bairro">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_bairro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>


                 <!-- SEÇÃO: FAMÍLIA -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dados Familiares"
                    android:textColor="@color/dark_accent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                     <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Estado Civil"
                         android:layout_marginEnd="4dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_estado_civil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                     <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Data Casamento">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_data_casamento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                 <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Nome do Cônjuge">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_conjuge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                 <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Nome da Mãe">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_mae"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                 <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Nome do Pai">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_pai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/check_tem_filhos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tem Filhos?"
                    android:layout_marginTop="8dp"
                    android:enabled="false"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Filhos (Nome e Data de Nascimento)"
                    app:helperText="Ex: João (10/05/2015), Maria (20/08/2018)">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_filhos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>


                <!-- SEÇÃO: DADOS ECLESIÁSTICOS -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dados Eclesiásticos"
                    android:textColor="@color/dark_accent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                     <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/check_batizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Batizado?"
                        android:enabled="false"/>

                     <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="Data Batismo">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_data_batismo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Igreja de Batismo">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_igreja_batismo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:inputType="textCapWords"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Tipo (Membro/Visitante)"
                         android:layout_marginEnd="4dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_tipo_membro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                             android:inputType="text"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                         android:layout_marginStart="4dp"
                        android:hint="Aceito por"
                        app:helperText="Ex: Aclamação, Transferência">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_aceito_por"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                             android:inputType="text"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Igreja Anterior">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_igreja_anterior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:inputType="textCapWords"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>
                
                 <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Pastor"
                     app:helperText="Pastor Anterior ou Atual Referência">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_pastor_anterior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:inputType="textPersonName"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Cargos Exercidos">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_cargos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:inputType="textMultiLine"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Talentos / Ministérios">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_talentos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:inputType="textMultiLine"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="80dp"
                    android:hint="Deseja função? Qual?">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_deseja_funcao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:inputType="textMultiLine"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Botão de Edição (inicialmente visível) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_editar_membro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/ic_edit"
        android:contentDescription="@string/editar_dados_do_membro"
        app:tint="@color/white"
        app:backgroundTint="@color/dark_accent" />

    <!-- Botão de Salvar (inicialmente invisível) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_salvar_membro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/ic_save"
        android:visibility="gone"
        android:contentDescription="@string/salvar_altera_es"
        app:tint="@color/white"
        app:backgroundTint="@color/dark_accent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

