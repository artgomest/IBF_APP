<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:fillViewport="true"
    tools:context=".ui.agenda.DetalhesReuniaoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:text="Detalhes do Discipulado"
            android:textColor="@color/dark_text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/dark_surface"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_membro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Membro: João Silva"
                    android:textColor="@color/dark_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/text_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data: 10/10/2023 14:00"
                    android:textColor="@color/dark_text_secondary"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/text_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local: Igreja"
                    android:textColor="@color/dark_text_secondary"
                    android:layout_marginBottom="8dp"/>
                
                <TextView
                    android:id="@+id/text_obs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Observações: ..."
                    android:textColor="@color/dark_text_secondary" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Audio Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gravar Áudio"
            android:textColor="@color/dark_text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gravar"
                android:layout_marginEnd="8dp"
                app:icon="@drawable/ic_mic_black_24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parar"
                android:enabled="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/dark_error"
                app:strokeColor="@color/dark_error"/>

        </LinearLayout>
        
        <TextView
            android:id="@+id/text_audio_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aguardando..."
            android:textColor="@color/dark_text_secondary"
            android:layout_marginBottom="24dp"/>

        <!-- Photo Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto do Encontro"
            android:textColor="@color/dark_text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tirar Foto"
            app:icon="@drawable/ic_photo_camera_black_24dp"
            android:layout_marginBottom="12dp"/>

        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@color/dark_surface"
            android:src="@drawable/ic_image_placeholder"
            android:contentDescription="Foto da reunião" 
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>
