<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/dark_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selecionar_tipo_relatorio"
        android:textColor="@color/dark_text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/button_ver_relatorios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ver_relatorios_button"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_criar_relatorio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/criar_novo_relatorio_button"/>

</LinearLayout>