<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#402121"
    app:cardCornerRadius="12dp"
    app:strokeColor="#803B3B"
    app:strokeWidth="1dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_warning"
            app:tint="#FF8A8A"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_faltante_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendente: 25/12/2025"
                android:textColor="#FF8A8A"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/item_faltante_rede"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rede: Nome da Rede"
                android:textColor="#D88282"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>