<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    style="@style/Widget.MaterialComponents.CardView"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/dark_card_background"
    app:strokeColor="@color/dark_divider"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_nome_solicitante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Nome do Novo Usuário"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_text_primary"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/text_papel_solicitado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Papel Solicitado: Secretário"
            android:textSize="14sp"
            android:textColor="@color/dark_text_secondary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/button_rejeitar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rejeitar"                android:backgroundTint="@color/status_red_dark_theme"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/button_aprovar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/aprovar"                android:backgroundTint="@color/status_green_dark_theme"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"/>

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>