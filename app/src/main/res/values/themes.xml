<resources>
    <style name="Base.Theme.IBFAPP" parent="Theme.Material3.Dark.NoActionBar">
    </style>

    <style name="Theme.IBFAPP" parent="Base.Theme.IBFAPP" />

    <style name="formLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_text_secondary</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="formEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:textColorHint">@color/dark_text_secondary</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="cardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="cardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <style name="cardDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_text_secondary</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="SelectableCard" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/dark_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="DashboardCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/dark_card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="DashboardCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DashboardCardIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="tint">@color/dark_text_primary</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="DashboardCardTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GraficoCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="strokeColor">@color/dark_text_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="GraficoContent" parent="">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="GraficoTitle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GraficoTitle.Small" parent="GraficoTitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GraficoChart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <style name="GraficoValor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>